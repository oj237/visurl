# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build account`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t account`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system account && \
          adduser --system -G account account

COPY dist/apps/account account
RUN chown -R account:account .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix account --omit=dev -f install

CMD [ "node", "account" ]
