# Run the container with `docker run -p 3000:3000 -t shrinker`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system shrinker && \
          adduser --system -G shrinker shrinker

